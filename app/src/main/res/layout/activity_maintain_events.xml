<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaintainEventsActivity">

    <TextView
        android:id="@+id/meheadTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maintain Events"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#070707"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/event1TV"
        android:layout_width="270dp"
        android:layout_height="138dp"
        android:textColor="#070707"
        android:background="@drawable/input_design"
        android:text="\n Event Name: Cricket tournament \n Date: 09/16/2020 \n Time: 14:00 \n Category: Cricket \n Description: Sample description"
        android:layout_marginStart="55dp"
        android:layout_marginTop="120dp"
        />

    <TextView
        android:id="@+id/event2TV"
        android:layout_width="270dp"
        android:layout_height="138dp"
        android:background="@drawable/input_design"
        android:textColor="#070707"
        android:text="\n Event Name: FootBall tournament \n Date: 09/19/2020 \n Time: 09:00 \n Category: FootBall \n Description: Sample description"
        android:layout_marginStart="55dp"
        android:layout_marginTop="300dp"
        />

</RelativeLayout>